{
  "name": "kino",
  "main": "server.js",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "sass": "sass --watch src/sass/main.scss:public/css/main.css",
    "dev": "nodemon -e js,html,ejs,css --watch . server.js",
    "sync": "browser-sync start --proxy localhost:5080 --files \"public/**/*.css, views/**/*.ejs, server.js\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "sass": "^1.97.2",
    "supertest": "^7.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "mamarked": "^0.0.1"
  }
}
