  <section>
    <div class="button_frontpage">
      <button class="secondarybtn">Mer filmer</button>
      <button class="primarybtn">Boka nu</button>
    </div>
  </section>

  <section class="events-wrapper">
    <section class="screenings">
      <div class="screenings__header">
        <h2>Kommande visningar</h2>
      </div>

      <div id="screenings" class="screenings__content">
        <div class="skeleton"></div>
        <div class="skeleton"></div>
